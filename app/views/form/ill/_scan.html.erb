<%= f.text_field(:pages, label: 'Pages', value: record['pages']) %>
<%= f.text_field(:sid, label: 'Citation Source', value: record['sid']) %>
<%= f.text_field(:isbn, label: 'ISBN/ISSN', value: record['isbn']) %>
