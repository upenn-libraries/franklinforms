<%= f.text_field(:journal, label: 'Journal/Book Title', value: record['journal'], required: true) %>
<%= f.text_field(:article, label: 'Article/Chapter Title', value: record['article'], required: true) %>
<%= f.text_field(:author, label: 'Article/Chapter Author', value: record['author'], required: true) %>
<%= f.text_field(:rftdate, label: 'Publication Date', value: record['rftdate'], required: true, maxlength: 30, help: '30 character limit') %>
<%= f.text_field(:volume, label: 'Volume', value: record['volume']) %>
<%= f.text_field(:issue, label: 'Issue', value: record['issue']) %>
<%= f.text_field(:pages, label: 'Pages', value: record['pages'], required: true) %>
<%= f.text_field(:sid, label: 'Citation Source', value: record['sid']) %>
