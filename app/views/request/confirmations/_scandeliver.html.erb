<div class="alert alert-info">
  <%= t('forms.local_request.delivery_messages.digi_html') %>
</div>

<%= f.text_field :section_title,
                 label: t('forms.local_request.fields.section_title'),
                 help: t('forms.local_request.help.section_title'),
                 required: true %>
<%= f.text_field :section_author,
                 label: t('forms.local_request.fields.section_author'),
                 help: t('forms.local_request.help.section_author'),
                 required: true %>
<%= f.text_field :section_pages,
                 label: t('forms.local_request.fields.section_pages'),
                 help: t('forms.local_request.help.section_pages') %>
<%= f.text_field :section_volume,
                 label: t('forms.local_request.fields.section_volume'),
                 help: t('forms.local_request.help.section_volume'),
                 value: params[:volume] %>
<%= f.text_field :section_issue,
                 label: t('forms.local_request.fields.section_issue'),
                 help: t('forms.local_request.help.section_issue'),
                 value: params[:issue] %>

<a href="#" id="toggle-proxy-input">Proxy Request?</a>

<div class="proxy-input hidden">
  <%= f.text_field :deliver_to, label: 'Deliver To' %>
</div>
