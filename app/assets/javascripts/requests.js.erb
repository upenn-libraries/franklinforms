$(document).ready(function() {
    var $details = $(".dev-details");
    $details.hide();
   $(".show-dev-details").click(function() {
       $(".dev-details").toggle();
   });

   $("#submit-confirm-button").click(function() {
       var item_select = document.getElementById("item_pid");
       var selected_option = $("#item_pid option:selected");
       var form_params = {
           mms_id: document.getElementById("mms_id").value,
           holding_id: document.getElementById("holding_id").value,
           item_pid: item_select.value,
           delivery_method: document.getElementById("delivery_method").value,
           issue: selected_option.data('issue'),
           volume: selected_option.data('volume'),
           year: selected_option.data('year')
       }
      $("#confirm-modal").modal({
          remote: '/forms/request/confirm' + '?' + $.param(form_params)
      });
   });
});
